        <item name="android:fadingEdge">horizontal|vertical</item>
        <item name="android:fadingEdgeLength">6.0dip</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:stackFromBottom">false</item>
        <item name="android:transcriptMode">normal</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">@null</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:requiresFadingEdge">horizontal|vertical</item>
    </style>
    <style name="Nemesis.Widget.Comms.MessagePane" parent="@style/Nemesis.Widget.Comms">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Nemesis.Widget.Comms.MessageBox" parent="@style/Nemesis.Widget.Comms">
        <item name="android:textColor">@drawable/comm_edittext_text_color</item>
