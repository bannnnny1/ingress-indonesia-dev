        <item name="android:layout_gravity">bottom|right|center</item>
        <item name="android:paddingTop">3.0dip</item>
        <item name="android:paddingRight">12.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/button_label_comm_panel</item>
    </style>
    <style name="Nemesis.Widget.Comms.TabHost" parent="@style/Nemesis.Widget.Comms">
        <item name="android:background">@color/comm_tabhost_background</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Nemesis.Widget.Comms.Tab" parent="@style/Nemesis.Widget.Comms">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@drawable/comm_tab_textcolor</item>
