    </style>
    <style name="Nemesis.Widget.Comms.MessageBox.InviteRedemption" parent="@style/Nemesis.Widget.Comms.MessageBox">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:background">@drawable/invite_redeem_foreground_border</item>
        <item name="android:hint">@null</item>
    </style>
    <style name="Nemesis.Widget.Modern" parent="@style/Nemesis.Widget" />
    <style name="Nemesis.Widget.Modern.Button" parent="@style/Nemesis.Widget.Modern" />
