        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="Nemesis.Widget.Comms.MessageContainer" parent="@style/Nemesis.Widget.Comms">
        <item name="android:background">@color/background</item>
        <item name="android:paddingTop">5.0dip</item>
        <item name="android:paddingBottom">5.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="Nemesis.Widget.Comms.PreviewContainer" parent="@style/Nemesis.Widget.Comms">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/comm_preview_background</item>
        <item name="android:paddingTop">4.0dip</item>
        <item name="android:paddingBottom">4.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">29.0dip</item>
