        <item name="android:textColor">@color/foreground</item>
        <item name="android:padding">9.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="Nemesis.Widget.TextView.PortalInfo.Attribution" parent="@style/Nemesis.Widget.TextView.PortalInfo">
