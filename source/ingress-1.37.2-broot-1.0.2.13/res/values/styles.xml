    </style>
    <style name="Nemesis.Widget.Comms" parent="@style/Nemesis.Widget" />
    <style name="Nemesis.Widget.Comms.CommHandle" parent="@style/Nemesis.Widget.Comms">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/comm_handle_textcolor</item>
