        <item name="android:textColor">@color/modern_dark_yellow</item>
        <item name="android:padding">0.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Nemesis.Widget.TextView.CommListItem" parent="@style/Nemesis.Widget.TextView">
        <item name="android:textSize">15.0sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:gravity">top|left|center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Nemesis.Widget.TextView.NoConnection" parent="@style/Nemesis.Widget.TextView">
