        <item name="android:hint">@string/comms_send_hint</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="Nemesis.Widget.Comms.MessageSendButton" parent="@style/Nemesis.Widget.Comms">
