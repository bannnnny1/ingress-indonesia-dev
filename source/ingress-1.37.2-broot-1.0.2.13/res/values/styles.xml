        <item name="android:background">@drawable/sign_on_send_message_button_bg</item>
        <item name="android:text">@string/action_transmit</item>
    </style>
    <style name="Nemesis.Widget.Comms.MessageSendButton.InviteRedemption" parent="@style/Nemesis.Widget.Comms.MessageSendButton">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/invite_redemption_activate</item>
